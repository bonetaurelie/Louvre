{% extends 'ABCoreBundle::layout.html.twig' %}

{% block title %}
{{ parent() }} - réservation
{% endblock %}

{% block body %}

    <h1>Merci de remplir le formulaire</h1>

    <div>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.quantite, "Quantité", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(form.quantite) }}

            <div class="col-sm-4">
                {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        {# Idem pour un autre champ. #}
        <div class="form-group">
            {{ form_label(form.type, "Type de billet", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.type) }}
            <div class="col-sm-4">
                {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.date, "Jour de la visite", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(form.date) }}

            <div class="col-sm-4">
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.email, "Votre email", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(form.email) }}

            <div class="col-sm-4">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        {{ form_widget(form.valider, {'attr': {'class': 'btn btn-primary'}}) }}

        {{ form_rest(form) }}

        {{ form_end(form) }}
    </div>
{% endblock %}