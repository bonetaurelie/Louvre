{% extends 'ABCoreBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }} - visiteurs
{% endblock %}

{% block body %}
    <ul class="list">
<div class="form">
    <h1 class="text-center">Merci de remplir le formulaire</h1>

    <div class="form2 col-md-offset-3">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {{ form_errors(form) }}
        {% for visiteur in form.visiteurs %}
        <li class="list">
        <div class="form-group">
            {{ form_label(visiteur.nom, "Votre nom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(visiteur.nom) }}

            <div class="col-md-3">
                {{ form_widget(visiteur.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(visiteur.prenom, "Votre prénom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(visiteur.prenom) }}
            <div class="col-md-2">
                {{ form_widget(visiteur.prenom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(visiteur.dateNaissance, "Votre date de naissance", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(visiteur.dateNaissance) }}

            <div class="col-md-3">
                {{ form_widget(visiteur.dateNaissance, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(visiteur.pays, "Votre pays de résidence", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(visiteur.pays) }}

            <div class="col-md-4">
                {{ form_widget(visiteur.pays, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="help hide" id="help-{{ loop.index }}">
                <p>
                    Merci de vous munir de votre carte étudiant, militaire ou  autre justificatif correspondant à votre situation
                </p>
            </div>

            {{ form_label(visiteur.tarifReduit, "Tarif réduit", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(visiteur.tarifReduit) }}

            <div class="col-md-1">
                {{ form_widget(visiteur.tarifReduit, {'attr': {'class': 'form-control checkbox-help','data-help-number': loop.index}}) }}
            </div>
        </div>
         </li>
        {% endfor %}

        <div class="col-md-offset-4">
            {{ form_widget(form.valider, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>

        {{ form_rest(form) }}

        {{ form_end(form) }}
    </div>
</div>

    </ul>
{% endblock %}
